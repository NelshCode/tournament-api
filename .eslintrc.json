{
    "env": {
      "browser": false,
      "node": true,
      "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-console": "warn",  // Avertit sur les console.log
      "@typescript-eslint/no-unused-vars": "warn", // Avertit sur les variables inutilis√©es
      "@typescript-eslint/explicit-function-return-type": "off", // Autorise l'absence de types explicites sur les fonctions
      "prettier/prettier": ["error", { "endOfLine": "auto" }] // Compatible avec Prettier
    }
  }
  